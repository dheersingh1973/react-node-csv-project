# Server
PORT=5000

# Local database (your existing POS store database)
DB_HOST_LOCAL=localhost
DB_PORT_LOCAL=your_local_port
DB_USER_LOCAL=your_local_user
DB_PASSWORD_LOCAL=your_local_password
DB_NAME_LOCAL=pos_poc

# Global database (Docker: docker compose up -d)
# Defaults match the global MySQL container (pos_poc_master, admin)
# Port 3308 chosen to avoid conflict with local DB on 3307
DB_HOST_GLOBAL=localhost
DB_PORT_GLOBAL=your_global_port
DB_USER_GLOBAL=your_global_user
DB_PASSWORD_GLOBAL=your_global_password
DB_NAME_GLOBAL=pos_poc_master

# Store / POS (optional)
STORE_ID=1
STORE_NAME=SALES STORE 1
POS_ID=1
POS_NAME=POS-001

# Frontend URL (for receipts etc.)
FRONTEND_URL=http://localhost:3000
